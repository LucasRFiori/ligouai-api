generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PhoneNumber {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  phone     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime
  rating    Float
  ratingSum Int
  Comment   Comment[]
  tags      Json[]    @db.Json

  @@map("phone_numbers")
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  phoneId   String   @map("phone_id") @db.ObjectId
  userName  String   @map("user_name")
  comment   String
  rating    Int
  tags      String[]
  createdAt DateTime @default(now())

  phoneNumber PhoneNumber @relation(fields: [phoneId], references: [id])

  @@map("comments")
}
